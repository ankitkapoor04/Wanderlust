<% layout("layouts/Boilerplate") %>
  <body>
<div class="row mt-3">
  <div class="col-6 offset-2">
    <h3><%= listing.title %> </h3>
    <img src="<%= listing.image %>"  class="show-image" alt="...">
    <div class="card-body">
      <h5 class="card-title"></h5>
      <p class="card-text"><%= listing.description %></br>
        &#8377; <%= listing.price.toLocaleString("en-IN") %></br>
        <%= listing.location %></br>
        <%= listing.country %></p>
    </div>

  
<div class="row">
  <div class="col-1">
    <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark edit-btn mt-3 ">Edit </a></div>
  <div class="col-1">
    <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE" >
      <button class="btn btn-dark mt-3">Delete </button></div></div>
    </form>
  </div>
</div>
<hr>
<div class="col-8 offset-2 mb-3">
<h4>Leave a review</h4>
<form action="/listings/<%= listing._id %>/reviews" method="POST"  novalidate class="needs-validation" >
  <div class="mb-3 mt-3">
    <label for="rating" class="form-label">Rating</label>
    <input type="range" min="0" max="5" id="rating" name="review[rating]" class="form-range"/>
  </div>
  <div class="mb-3 mt-3">
    <label for="comment" class="form-label">Comments</label>
    <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
    <div class="invalid-feedback">Please add some comment for review</div>
  </div>
  <button class="btn btn-outline-dark">Submit</button>
</form>
<hr>
<p><b>All Reviews</b></p>
<ul>
  <div class="row">
  <% for (review of listing.reviews) {%>
<div class="card col-5 ms-3 mb-3">
  <div class="card-body">
    <div class="card-title">Ankit</div>
    <div class="card-text"><%= review.comment %></div>
    <div class="card-text"><%= review.rating %>stars</div>
  </div>
  <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
    <button class="btn btn-sm btn-dark">Delete</button>
    </form>
</div>

  <%}%>
</ul>
</div>
</div>
  </body>
